<Window x:Class="TwitterStreamUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitterStreamUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox_user_screen_name" HorizontalAlignment="Left" Height="21" Margin="22,30,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="180" KeyDown="TextBox_user_screen_name_KeyDown"/>
        <TextBlock x:Name="textBlock_userName" HorizontalAlignment="Left" Height="31" Margin="22,72,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="180"/>
        <Image x:Name="image_profileImage" HorizontalAlignment="Left" Height="113" Margin="234,30,0,0" VerticalAlignment="Top" Width="113"/>
        <ListBox x:Name="listBox_tweets" HorizontalAlignment="Left" Height="222" Margin="22,170,0,0" VerticalAlignment="Top" Width="325"/>
        <ListBox x:Name="listBox_friends" HorizontalAlignment="Left" Height="362" Margin="407,30,0,0" VerticalAlignment="Top" Width="363"/>

    </Grid>
</Window>
